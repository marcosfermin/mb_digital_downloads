<odoo>
  <data noupdate="1">
    <record id="mail_template_digital_downloads" model="mail.template">
      <field name="name">Descargas digitales listas</field>
      <field name="model_id" ref="sale.model_sale_order"/>
      <field name="subject">Tus descargas digitales están listas – ${object.name}</field>
      <field name="email_from">${(user.company_id.email or user.email)|safe}</field>
      <field name="email_to">${object.partner_id.email|safe}</field>
      <field name="body_html" type="html">
        <![CDATA[
        <p>Hola ${object.partner_id.name or ''},</p>
        <p>Tu pedido <strong>${object.name}</strong> está pagado y tus descargas digitales ya están disponibles.</p>
        <p>Accede desde tu portal: <a href="/my/downloads">Mis Descargas</a></p>
        <p>Gracias por tu compra.</p>
        ]]>
      </field>
    </record>
  </data>
</odoo>
