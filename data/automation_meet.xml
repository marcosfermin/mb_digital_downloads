<odoo>
  <data noupdate="0">
    <record id="ir_actions_server_create_meet" model="ir.actions.server">
      <field name="name">Crear Google Meet en reserva</field>
      <field name="model_id" ref="appointment.model_appointment_booking"/>
      <field name="state">code</field>
      <field name="code">records.action_create_google_meet()</field>
    </record>

    <record id="base_automation_create_meet_on_booking" model="base.automation">
      <field name="name">Auto-Meet en nuevas reservas</field>
      <field name="model_id" ref="appointment.model_appointment_booking"/>
      <field name="trigger">on_create</field>
      <field name="state">code</field>
      <field name="code">env['ir.actions.server'].browse(ref('mb_digital_downloads.ir_actions_server_create_meet')).sudo().run()</field>
      <field name="active" eval="True"/>
    </record>
  </data>
</odoo>
