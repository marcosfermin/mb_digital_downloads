<odoo>
  <data>
    <menuitem id="mb_dd_root" name="Descargas Digitales" parent="sale.sale_menu_root" sequence="90"/>
    <record id="view_digital_delivery_tree" model="ir.ui.view">
      <field name="name">digital.delivery.tree</field>
      <field name="model">digital.delivery</field>
      <field name="arch" type="xml">
        <tree>
          <field name="create_date"/>
          <field name="order_id"/>
          <field name="partner_id"/>
          <field name="product_id"/>
          <field name="attempts_count"/>
          <field name="max_attempts"/>
          <field name="state"/>
        </tree>
      </field>
    </record>
    <record id="view_digital_delivery_form" model="ir.ui.view">
      <field name="name">digital.delivery.form</field>
      <field name="model">digital.delivery</field>
      <field name="arch" type="xml">
        <form string="Entrega digital">
          <sheet>
            <group>
              <field name="order_line_id"/>
              <field name="partner_id" readonly="1"/>
              <field name="product_id" readonly="1"/>
              <field name="storage_key"/>
              <field name="attempts_count"/>
              <field name="max_attempts"/>
              <field name="last_download_at"/>
              <field name="url_expires_at"/>
              <field name="state"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <record id="action_digital_delivery" model="ir.actions.act_window">
      <field name="name">Entregas Digitales</field>
      <field name="res_model">digital.delivery</field>
      <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="mb_dd_menu_delivery" name="Entregas" parent="mb_dd_root" action="action_digital_delivery"/>
  </data>
</odoo>
