<odoo>
  <data>
    <template id="portal_my_downloads" name="Mis Descargas" page="True">
      <t t-call="portal.layout">
        <t t-set="breadcrumbs" t-value="[('Mis Descargas', '/my/downloads')]"/>
        <div class="container o_portal_wrap">
          <h2>Mis Descargas</h2>
          <t t-if="not deliveries"><p>No tienes entregas digitales todavía.</p></t>
          <t t-foreach="deliveries" t-as="d">
            <div class="card mb-3">
              <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                  <strong t-esc="d.product_id.display_name"/>
                  <div class="text-muted">
                    Pedido: <t t-esc="d.order_id.name"/> · Intentos: <t t-esc="d.attempts_count"/>/<t t-esc="d.max_attempts"/>
                  </div>
                </div>
                <div>
                  <a t-attf-href="/my/downloads/{{d.id}}/get" class="btn btn-primary" t-if="d.state == 'available'">Descargar</a>
                  <span class="badge bg-secondary" t-if="d.state != 'available'">No disponible</span>
                </div>
              </div>
            </div>
          </t>
        </div>
      </t>
    </template>

    <template id="portal_my_home_inherit_mb_dd" inherit_id="portal.portal_my_home">
      <xpath expr="//div[@id='o_portal_docs']" position="inside">
        <div class="col-12 col-md-6 col-lg-4">
          <a class="o_portal_tile" href="/my/downloads">
            <div class="o_portal_tile_title">Mis Descargas</div>
            <div class="o_portal_tile_subtitle">Packs y productos digitales</div>
          </a>
        </div>
        <div class="col-12 col-md-6 col-lg-4">
          <a class="o_portal_tile" href="/my/bookings">
            <div class="o_portal_tile_title">Mis Reservas</div>
            <div class="o_portal_tile_subtitle">Clases, mezcla y mastering</div>
          </a>
        </div>
      </xpath>
    </template>
  </data>
</odoo>
