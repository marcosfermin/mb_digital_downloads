<odoo>
  <data>
    <record id="product_template_form_inherit_mb_dd" model="ir.ui.view">
      <field name="name">product.template.form.mb_dd</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//sheet/notebook/page[@name='sales']" position="inside">
          <group string="Descarga digital">
            <field name="is_digital"/>
            <field name="digital_storage_key" attrs="{'invisible': [('is_digital','=',False)]}"/>
            <field name="preview_url"/>
          </group>
          <group string="Reserva (opcional)">
            <field name="appointment_type_id"/>
            <field name="appointment_duration"/>
          </group>
        </xpath>
      </field>
    </record>

    <template id="website_sale_product_inherit_mb_dd" inherit_id="website_sale.product">
      <xpath expr="//div[contains(@class,'o_wsale_product_information')]/div" position="inside">
        <t t-if="product.product_tmpl_id.preview_url">
          <div class="mb_dd_preview mt16">
            <h6>Preview</h6>
            <audio controls preload="none" style="width:100%">
              <source t-att-src="product.product_tmpl_id.preview_url" type="audio/mpeg"/>
            </audio>
          </div>
        </t>
      </xpath>
    </template>
  </data>
</odoo>
